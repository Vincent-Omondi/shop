<h1>Your Cart</h1>

<% if @cart.line_items.empty? %>
  <p>Your cart is empty</p>
<% else %>
  <ul>
    <% @cart.line_items.each do |item| %>
      <li>
        <%= item.quantity %> x <%= item.product.name %> 
        (<%= number_to_currency(item.total_price) %>)
      </li>
    <% end %>
  </ul>

  <p>Total: <%= number_to_currency(@cart.total_price) %></p>
<% end %>